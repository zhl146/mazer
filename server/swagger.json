{
    "swagger": "2.0",
    "info": {
        "description": "",
        "version": "1.0.0",
        "title": "Mazer Backend",
        "termsOfService": "",
        "contact": {
            "email": "zhl146@gmail.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        }
    },
    "host": "zhenlu.info",
    "basePath": "/",
    "tags": [
        {
            "name": "maze",
            "description": "validates submitted maze solutions"
        },
        {
            "name": "leaderboard",
            "description": "get leaderboard scores"
        }
    ],
    "schemes": ["http"],
    "paths": {
        "/maze": {
            "get": {
                "tags": ["maze"],
                "summary": "request a seed from the server",
                "description":
                    "generates today's seed string and sends it as a json with 'seed' field",
                "operationId": "getSeed",
                "consumes": ["application/json"],
                "produces": ["application/json"],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Seed"
                        }
                    }
                }
            }
        },
        "/maze/check": {
            "post": {
                "tags": ["maze"],
                "summary":
                    "validate user solution and add it to the score database",
                "description": "",
                "operationId": "submitScore",
                "consumes": ["application/json"],
                "produces": ["application/json"],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Solution"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "$ref": "#/definitions/RankStatus"
                        }
                    },
                    "500": {
                        "description": "Error"
                    }
                }
            }
        },
        "/leaderboard": {
            "get": {
                "tags": ["leaderboard"],
                "summary": "fetches scores from the leaderboard",
                "description": "",
                "operationId": "fetchLeaderboard",
                "produces": ["application/json"],
                "parameters": [
                    {
                        "name": "seed",
                        "in": "query",
                        "description":
                            "the seed that you want the leaderboard for",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "numscores",
                        "in": "query",
                        "description": "how many score to fetch",
                        "required": true,
                        "type": "integer"
                    },
                    {
                        "name": "startRank",
                        "in": "query",
                        "description":
                            "how many scores to skip before fetching",
                        "required": true,
                        "type": "integer"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "$ref": "#/definitions/Scores"
                        }
                    }
                }
            }
        }
    },
    "securityDefinitions": {
        "petstore_auth": {
            "type": "oauth2",
            "authorizationUrl": "http://petstore.swagger.io/oauth/dialog",
            "flow": "implicit",
            "scopes": {
                "write:pets": "modify pets in your account",
                "read:pets": "read your pets"
            }
        },
        "api_key": {
            "type": "apiKey",
            "name": "api_key",
            "in": "header"
        }
    },
    "definitions": {
        "Point": {
            "type": "object",
            "properties": {
                "x": {
                    "type": "integer"
                },
                "y": {
                    "type": "integer"
                }
            }
        },
        "Solution": {
            "type": "object",
            "properties": {
                "seed": {
                    "type": "string"
                },
                "solution": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Point"
                    }
                },
                "email": {
                    "type": "string",
                    "format": "user's email"
                },
                "name": {
                    "type": "string",
                    "format": "user's display name"
                }
            },
            "xml": {
                "name": "Solution"
            }
        },
        "Score": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "score": {
                    "type": "integer"
                },
                "date": {
                    "type": "string"
                },
                "solution": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Point"
                    }
                }
            }
        },
        "Scores": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/Score"
            }
        },
        "Seed": {
            "type": "object",
            "properties": {
                "seed": {
                    "type": "string"
                }
            }
        },
        "RankStatus": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "boolean"
                },
                "status": {
                    "type": "string"
                },
                "rank": {
                    "type": "integer"
                }
            }
        }
    },
    "externalDocs": {
        "description": "Find out more about Swagger",
        "url": "http://swagger.io"
    }
}
