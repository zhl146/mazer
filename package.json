{
  "name": "mazer",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build-client": "webpack",
    "test": " babel-node --inspect --presets env -- ./server/tests/test",
    "start": "babel-node --inspect --presets env -- ./bin/www",
    "start-dev": "webpack-dev-server",
    "clean": "rm -rf server-dist && mkdir server-dist && mkdir server-dist/shared",
    "build-server": "babel --presets es2015 . -d server-dist --ignore client,client-dist,server-dist,spec,node_modules,package.json,webpack.config.js",
    "build": "npm run clean && npm run build-server"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "color-scheme": "^1.0.0",
    "compression": "^1.7.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "express": "^4.15.4",
    "mazer-shared": "0.0.39",
    "mongodb": "^2.2.31",
    "mongoose": "=4.10.8",
    "morgan": "^1.8.2",
    "sass": "^1.0.0-beta.2",
    "seedrandom": "^2.4.3"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.0",
    "tape": "^4.8.0",
  }
}
